<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Questoes">

    <TextView
        android:id="@+id/pergunta"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginBottom="10dp"

        android:textAlignment="center"
        android:textSize="25sp"
        />

    <Button
        android:id="@+id/resposta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alternativa1"
        android:background="@drawable/border_button"
        android:layout_marginBottom="20dp"
       />

    <Button
        android:id="@+id/resposta2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="alternativa2"

        android:layout_marginBottom="20dp"
        android:background="@drawable/border_button"
        />

    <Button
        android:id="@+id/resposta3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_button"
        android:onClick="alternativa3"
         />

    <Button
        android:id="@+id/resposta4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/border_button"
        android:onClick="alternativa4"
         />

    <Button
        android:id="@+id/proximo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="proximaquestao"
        android:text="PrÃ³ximo"
        android:visibility="visible"
        android:background="@drawable/border_button"
        android:layout_marginTop="50dp"/>
</LinearLayout>